{
  "name": "angular-hispano",
  "version": "0.5.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:mobile-testing": "ng serve --host 0.0.0.0 --disable-host-check",
    "build": "ng build",
    "build:sm": "ng build --configuration=staging --source-map",
    "build:staging": "ng build --configuration=staging",
    "build:prod": "ng build --configuration=production",
    "build:prod:ci": "npm run ngcc && ng build --configuration=production",
    "deploy": "npm run build:staging && firebase use staging && firebase deploy --only hosting",
    "deploy:prod": "npm run build:prod && firebase use production && firebase deploy --only hosting",
    "format": "npm run prettier",
    "ngcc": "ngcc --async false --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,md,ts,html,component.html}\"",
    "lint": "ng lint",
    "smex": "source-map-explorer",
    "stylelint": "stylelint \"**/*.scss\" --config .stylelintrc --syntax scss",
    "test": "ng test",
    "test:ci": "npm run ngcc && ng test --watch=false --browsers='ChromeHeadlessNoSandbox,FirefoxHeadless'",
    "update": "npm-check -u"
  },
  "private": true,
  "dependencies": {
    "@angular-material-extensions/password-strength": "^8.1.1",
    "@angular/animations": "~11.2.7",
    "@angular/cdk": "~11.2.7",
    "@angular/common": "~11.2.7",
    "@angular/compiler": "~11.2.7",
    "@angular/core": "~11.2.7",
    "@angular/fire": "^6.1.4",
    "@angular/flex-layout": "^11.0.0-beta.33",
    "@angular/forms": "~11.2.7",
    "@angular/material": "~11.2.7",
    "@angular/platform-browser": "~11.2.7",
    "@angular/platform-browser-dynamic": "~11.2.7",
    "@angular/router": "~11.2.7",
    "@angular/service-worker": "~11.2.7",
    "firebase": "^8.3.2",
    "first-input-delay": "^0.1.3",
    "ngx-auth-firebaseui": "^5.2.0",
    "proxy-polyfill": "^0.3.2",
    "rxjs": "^6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1102.6",
    "@angular-devkit/build-angular": "~0.1102.6",
    "@angular-devkit/core": "~11.2.6",
    "@angular-devkit/schematics": "~11.2.6",
    "@angular/cli": "~11.2.6",
    "@angular/compiler-cli": "~11.2.7",
    "@angular/language-service": "~11.2.7",
    "@schuchard/prettier": "^5.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^14.14.37",
    "codelyzer": "^6.0.1",
    "firebase-tools": "^9.8.0",
    "husky": "^4.3.8",
    "jasmine-core": "^3.7.1",
    "jasmine-spec-reporter": "^6.0.0",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.4",
    "minimatch": "^3.0.4",
    "npm-check": "^5.9.2",
    "prettier": "^2.2.1",
    "protractor": "~7.0.0",
    "rxjs-tslint-rules": "^4.34.7",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^13.12.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tsutils": "^3.21.0",
    "typescript": "~4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ng lint && npm run stylelint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html,component.html}": [
      "prettier --write"
    ]
  }
}
