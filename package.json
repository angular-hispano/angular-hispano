{
  "name": "angular-hispano",
  "version": "0.5.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:mobile-testing": "ng serve --host 0.0.0.0 --disable-host-check",
    "build": "ng build",
    "build:sm": "ng build --configuration=staging --source-map",
    "build:staging": "ng build --configuration=staging",
    "build:prod": "ng build --configuration=production",
    "build:prod:ci": "npm run ngcc && ng build --configuration=production",
    "deploy": "npm run build:staging && firebase use staging && firebase deploy --only hosting",
    "deploy:prod": "npm run build:prod && firebase use production && firebase deploy --only hosting",
    "format": "npm run prettier",
    "ngcc": "ngcc --async false --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,md,ts,html,component.html}\"",
    "lint": "ng lint",
    "smex": "source-map-explorer",
    "stylelint": "stylelint \"**/*.scss\" --config .stylelintrc --syntax scss",
    "test": "ng test",
    "test:ci": "npm run ngcc && ng test --watch=false --browsers='ChromeHeadlessNoSandbox,FirefoxHeadless'",
    "update": "npm-check -u"
  },
  "private": true,
  "dependencies": {
    "@angular-material-extensions/password-strength": "^8.2.1",
    "@angular/animations": "~13.4.0",
    "@angular/cdk": "~12.0.1",
    "@angular/common": "~13.4.0",
    "@angular/compiler": "~13.4.0",
    "@angular/core": "~13.4.0",
    "@angular/fire": "^6.1.5",
    "@angular/flex-layout": "^12.0.0-beta.34",
    "@angular/forms": "~13.4.0",
    "@angular/material": "~12.0.1",
    "@angular/platform-browser": "~13.4.0",
    "@angular/platform-browser-dynamic": "~13.4.0",
    "@angular/router": "~13.4.0",
    "@angular/service-worker": "~13.4.0",
    "firebase": "^8.6.2",
    "first-input-delay": "^0.1.3",
    "ngx-auth-firebaseui": "^5.3.0",
    "proxy-polyfill": "^0.3.2",
    "rxjs": "^6.6.7",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1303.11",
    "@angular-devkit/build-angular": "~13.3.11",
    "@angular-devkit/core": "~13.3.11",
    "@angular-devkit/schematics": "~13.3.11",
    "@angular-eslint/builder": "13.5.0",
    "@angular-eslint/eslint-plugin": "13.5.0",
    "@angular-eslint/eslint-plugin-template": "13.5.0",
    "@angular-eslint/schematics": "13.5.0",
    "@angular-eslint/template-parser": "13.5.0",
    "@angular/cli": "~13.3.11",
    "@angular/compiler-cli": "~13.4.0",
    "@angular/language-service": "~13.4.0",
    "@babel/core": "^7.18.13",
    "@schuchard/prettier": "^5.0.0",
    "@types/jasmine": "^3.7.4",
    "@types/jasminewd2": "^2.0.9",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "^8.2.0",
    "firebase-tools": "^11.25.3",
    "husky": "^4.3.8",
    "jasmine-core": "^3.7.1",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.3.20",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "lint-staged": "^11.0.0",
    "minimatch": "^3.0.8",
    "npm-check": "^6.0.1",
    "postcss": "^8.2.15",
    "prettier": "~2.6.2",
    "protractor": "~7.0.0",
    "source-map-explorer": "^2.5.3",
    "stylelint": "^13.13.1",
    "ts-node": "^9.1.1",
    "tsutils": "^3.21.0",
    "typescript": "~4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ng lint && npm run stylelint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html,component.html}": [
      "prettier --write"
    ]
  }
}
