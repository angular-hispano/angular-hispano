{
  "name": "angular-hispano",
  "version": "0.4.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:mobile-testing": "ng serve --host 0.0.0.0 --disable-host-check",
    "build": "ng build",
    "build:sm": "ng build --configuration=staging --source-map",
    "build:staging": "ng build --configuration=staging",
    "build:prod": "ng build --configuration=production",
    "build:prod:ci": "npm run ngcc && ng build --configuration=production",
    "deploy": "npm run build:staging && firebase use staging && firebase deploy --only hosting",
    "deploy:prod": "npm run build:prod && firebase use production && firebase deploy --only hosting",
    "format": "npm run prettier",
    "ngcc": "ngcc --async false --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,md,ts,html,component.html}\"",
    "lint": "ng lint",
    "smex": "source-map-explorer",
    "stylelint": "stylelint \"**/*.scss\" --config .stylelintrc --syntax scss",
    "test": "ng test",
    "test:ci": "npm run ngcc && ng test --watch=false --browsers='ChromeHeadlessNoSandbox,FirefoxHeadless'",
    "update": "npm-check -u"
  },
  "private": true,
  "dependencies": {
    "@angular-material-extensions/password-strength": "^6.0.0",
    "@angular/animations": "~10.1.0-next.5",
    "@angular/cdk": "~10.1.3",
    "@angular/common": "~10.1.0-next.5",
    "@angular/compiler": "~10.1.0-next.5",
    "@angular/core": "~10.1.0-next.5",
    "@angular/fire": "6.0.0",
    "@angular/flex-layout": "^10.0.0-beta.32",
    "@angular/forms": "~10.1.0-next.5",
    "@angular/material": "~10.1.3",
    "@angular/platform-browser": "~10.1.0-next.5",
    "@angular/platform-browser-dynamic": "~10.1.0-next.5",
    "@angular/router": "~10.1.0-next.5",
    "@angular/service-worker": "~10.1.0-next.5",
    "firebase": "^7.18.0",
    "first-input-delay": "^0.1.3",
    "ngx-auth-firebaseui": "^4.4.0",
    "proxy-polyfill": "^0.3.2",
    "rxjs": "~6.6.2",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1001.0-next.5",
    "@angular-devkit/build-angular": "~0.1001.0-next.5",
    "@angular-devkit/core": "~10.1.0-next.5",
    "@angular-devkit/schematics": "~10.1.0-next.5",
    "@angular/cli": "~10.1.0-next.5",
    "@angular/compiler-cli": "~10.1.0-next.5",
    "@angular/language-service": "~10.1.0-next.5",
    "@schuchard/prettier": "^3.1.0",
    "@types/jasmine": "^3.5.12",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^14.0.27",
    "codelyzer": "^6.0.0",
    "firebase-tools": "^8.7.0",
    "husky": "^4.2.5",
    "jasmine-core": "^3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.2.11",
    "minimatch": "^3.0.4",
    "npm-check": "^5.9.2",
    "prettier": "^2.0.5",
    "protractor": "~7.0.0",
    "rxjs-tslint-rules": "^4.34.0",
    "source-map-explorer": "^2.4.2",
    "stylelint": "^13.6.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tsutils": "^3.17.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ng lint && npm run stylelint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  }
}
